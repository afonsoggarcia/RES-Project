  <%= turbo_frame_tag 'content' do %>
    <% @articles.each do |article| %>
      <div class="container border border-white my-2 py-2">
        <h2 class='text-light'><%= article.title %></h2>
        <p><%= article.user.nickname %></p>
        <%= link_to 'See content', article_path(article), class:'btn btn-ghost rounded-pill', target:'_blank' %>
        <%= link_to 'Accept', article_path(article, accept: 'true'), class:'btn btn-success rounded-pill', data: {turbo_method: :patch, turbo_confirm: "Are you sure?"} %>
      </div>
    <% end %>
  <% end %>
