<div class="container-fluid">
  <div class="row flex-nowrap" data-controller="dashboard">
    <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
      <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
        <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <span class="fs-5 d-none d-sm-inline"><%= current_user.nickname %></span>
        </a>
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
          <li class="nav-item">
            <a href="/dashboard?query=news" class="nav-link align-middle px-0" data-turbo-frame="content">
              <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline"></span>What's new
              <%# Fazer display das notificações mais novas %>
            </a>
          </li>
          <li>
            <a href="/dashboard?query=articles" class="nav-link px-0 align-middle" data-turbo-frame="content">
              <i class="fs-4 bi-table"></i>
              <span class="ms-1 d-none d-sm-inline"></span>My Articles
            </a>
              <%# Fazer display dos artigos novos para serem aceitos %>
          </li>
          <li>
            <a href="/articles/new" class="nav-link px-0 align-middle", target="_blank">
              <i class="fs-4 bi-table"></i>
              <span class="ms-1 d-none d-sm-inline"></span>New Article
            </a>
              <%# Fazer display dos artigos novos para serem aceitos %>
          </li>
        </ul>
        <hr>
        <div class="dropdown pb-4">
          <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            <%= render 'shared/user_avatar' %>
          <span class="d-none d-sm-inline mx-1"><%=current_user.nickname%></span>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="/topics/new", target="_blank">New forum topic</a></li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %></li>
          </ul>
        </div>
      </div>
    </div>
    <%= render 'content_dash' %>
  </div>
</div>
