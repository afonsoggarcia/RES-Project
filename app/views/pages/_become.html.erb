<%= turbo_frame_tag 'content' do %>
  <div class="container border border-white my-2 py-2">
    <%= simple_form_for [ @request ] do |f| %>
      <div class="form-comment-1 p-4 text-center">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :content, label:"Why do you want to become a publisher? What's your background?" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Submit', class: 'btn btn-dark rounded-pill d-block' %>
    </div>

  <% end %>
  </div>
<% end %>
